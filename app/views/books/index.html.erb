<div class="container">
  <div class="row">
   <div class="col-lg-4">
    <%= render "homes/error", error: @book_info%>
    
    <%= render "users/user_info", user_info: @user %>
    
    <%= render "new_book", book: @book_info %>
   </div>
   <div class="col-lg-8">
    <h1>Books</h1>
    <table class="table table-striped">
      <tr>
       <th></th>
       <th>title</th> 
       <th>opinion</th>
      </tr>
      <% @books.each do |book| %>
      <tr>
       <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
       <td><%= link_to book.title, book_path(book.id) %></td>
       <td><%= book.body %></td>
      </tr> 
      <% end %>
    </table>
  </div>
 </div>
</div>