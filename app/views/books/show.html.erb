<div class="container">
 <div class="row">
  <div class="col-lg-4">
   <%= render "users/user_info", user_info: @user_info %>
   <%= render "books/new_book", book: @book %>
  </div>
  <div class="col-lg-8">
   <h1>Book detail</h1>
   
   <table class="table">
     <tr>
      <th></th>
      <th></th>
      <th></th> 
      <th></th>
      <th></th>
     </tr>
     <tr>
      <td><%= image_tag @booker.user.get_profile_image(100, 100) %></td>
      
      <td><%= link_to @booker.title, book_path(@booker) %></td>
      
      <td><%= @booker.body %></td>
   
      <% if @user == current_user.id %>
       <td class="btn btn-success mr-5"> <%= link_to "Edit", edit_book_path(@booker) %></td>
       <td class="btn btn-danger"> <%= link_to "Destroy", book_path(@booker), method: :delete, "data-confirm" => "Are you sure?" %></td>
      <% else %>
       <td></td>
       <td></td>
      <% end %>
     </tr> 
   </table>
      <%= link_to @booker.user.name, user_path(@user) %>
  </div>
 </div>
</div>
