<div class="container">
 <div class="row">
  <div class="col-md-3">
   
   <%= render "users/user_info", user_info: @user_info %>
   
   <%= link_to edit_user_path(@user) do %>
   <button type="button" class="btn btn-outline-secondary btn-block">
   <i class="fas fa-user-cog"></i>
   </button>
   <% end %>
   
   <%= render "books/new_book", book: @book %>
  </div>
  <div class="col-md-8 offset-md-1">
   <h1>Book detail</h1>
   
   <table class="table">
     <tr>
      <th></th>
      <th></th>
      <th></th> 
      <th></th>
      <th></th>
     </tr>
     <tr>
      <td><%= link_to user_path(@booker.user_id) do %>
        <%= image_tag @booker.user.get_profile_image(100, 100)%></br>
        <%= @booker.user.name %>
      <% end %> 
      <td>
      
      <td><%= link_to @booker.title, book_path(@booker) %></td>
      
      <td><%= @booker.body %></td>
   
      <% if @user == current_user.id %>
       <td class="btn btn-success mr-5"> <%= link_to "Edit", edit_book_path(@booker) %></td>
       <td class="btn btn-danger"> <%= link_to "Destroy", book_path(@booker), method: :delete, "data-confirm" => "Are you sure?" %></td>
      <% else %>
       <td></td>
       <td></td>
      <% end %>
     </tr> 
   </table>
  </div>
 </div>
</div>
