<h1>User info</h1>

<%= form_with model: @user_info, local: true do |f| %>
 
  <p>Name</p>
  <%= f.text_field :name %>
  
  <p>Image</p>
  <%= f.file_field :profile_image, accept: "image/*" %>
  
  <p>introduction</p>
  <%= f.text_area :introduction %>
  
  <p><%= f.submit 'Update User' %><p>
  
<% end %>