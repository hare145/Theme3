 <div class="container">
  <div class="row">
   <div class="col-md-3">
    
    <%= render "user_info", user_info: @user_info %>
    
    <%= link_to edit_user_path(@user_info.id ) do %>
     <button type="button" class="btn btn-outline-secondary btn-block">
     <i class="fas fa-user-cog text-secondary"></i>
     </button>
    <% end %>
    
    
    <%= render "books/new_book", book: @book %>
    
   </div>
   <div class="col-md-8 offset-md-1">
    <h1>Books</h1>
    <table class="table table-striped">
     <tr>
      <th></th>
      <th>title</th> 
      <th>opinion</th>
     </tr>
     <% @books.each do |book| %>
     <tr>
      <td><%= link_to image_tag(book.user.get_profile_image(100, 100)), user_path(book.user_id) %></td>
      
      <td><%= link_to book.title, book_path(book.id) %></td>
      
      <td><%= book.body %></td>
     </tr> 
     <% end %>
    </table>
  </div>
 </div>
</div>
