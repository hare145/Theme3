<div class="container">
  <div class="row">
   <div class="col-lg-4">
      <%= render "users/user_info", user_info: @user %>
      
      <%= render "books/new_book", book: @book %>
    </div>
    <div class="col-lg-8">
      <table class="table table-striped">
         <tr>
           <th>image</th>
           <th>name</th>
           <th></th>
          </tr>
         <% @users.each do |user| %>
         <tr>
           <td><%= image_tag user.get_profile_image(100, 100) %></td>
           <td><%= user.name %></td>
           <td>
             <%= link_to "Show", user_path(user.id) %>
           </td>
        </tr> 
        <% end %>
      </table>
    </div>
 </div>
</div>
